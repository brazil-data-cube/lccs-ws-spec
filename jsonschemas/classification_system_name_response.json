{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "class_system.json#",
  "definitions": {
    "link": {
      "type": "object",
      "required": [
        "rel",
        "href"
      ],
      "properties": {
        "href": {
          "title": "Link reference",
          "type": "string"
        },
        "rel": {
          "title": "Link relation type",
          "type": "string"
        },
        "title": {
          "title": "Link title",
          "type": "string"
        }
      }
    }
  },
  "title": "Classification System Description",
  "type": "object",
  "required": [
    "links",
    "description",
    "name",
    "authority_name",
    "version",
    "style"
  ],
  "properties": {
    "links": {
      "title": "Links",
      "type": "array",
      "items": {
            "$ref": "#/definitions/link"
      }
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Classification System Name",
      "default": "",
      "examples": [
        "Prodes"
      ],
      "pattern": "^(.*)$"
    },
    "authority_name": {
      "$id": "#/properties/authority_name",
      "type": "string",
      "title": "The Authority Name of the Classification System",
      "default": "",
      "examples": [
        "INPE"
      ],
      "pattern": "^(.*)$"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "The Description of Classification System",
      "default": "",
      "pattern": "^(.*)$"
    } ,
    "version":{
      "$id": "#/properties/version",
      "type": "string",
      "title": "The Classification System Version",
      "default": "",
      "examples": [
            "1.0"
      ]
    }
  }
}